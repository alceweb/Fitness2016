@model IEnumerable<FitnessMVC.Models.Schede>

@{
    ViewBag.Title = "PersonalTrainer";
}
<img class="img-bg" src='@Url.Content("~/Content/Immagini/" + ViewBag.Title + ".jpg")' />

@if(ViewBag.SchedeUtCount == 0)
{
    <hr/>
    <h1 class="label label-danger">Nessuna scheda trovata!</h1>
    <h2>Il tuo personal trainer non ha ancora inserito nessuna scheda per te.</h2>
}
else
{
    <h4>Hai @ViewBag.SchedeUtCount  schede "Personal Trainer"</h4>
}

            @foreach (var item in Model)
            {
                <hr /><div class="row containerRipH">
                    <div class="col col-md-2">
                        <a href="@Url.Action("ListUt", "Schedes", new { id = item.Id })">
                            <img class="img-rounder img-circle img-esercizio" src='@Url.Content("~/Content/Immagini/Schede/" + item.Id + ".jpg")' />

                        </a>
                    </div>
                    <div class="col col-md-10">
                        @Html.ActionLink(@Html.DisplayFor(modelItem => item.Nome).ToString(), "ListUt", "Schedes", new { id = item.Id }, null)<br/>
                        <a role="button" data-toggle="collapse" href="#@item.Id" aria-expanded="false" aria-controls="@item.Id">
                            
                            <h6 >@item.Descrizione.Substring(0, 33) ...</h6>
                        </a>
                    </div>
          </div>
                    <div class="collapse" id="@item.Id">
                        <div class="well">
                            @item.Descrizione
                        </div>
                    </div>

                foreach (var items in item.Id.ToString())
                {
                    <span>@items.ToString()</span>
                }

            }

