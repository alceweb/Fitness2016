@model IEnumerable<FitnessMVC.Models.Esercizi>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descrizione)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img class="img-responsive img-circle img-esercizio" src='@Url.Content("~/Content/Immagini/Esercizi/" + item.Esercizio_Id + ".jpg")'/>
            @Html.DisplayFor(modelItem => item.Descrizione)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Esercizio_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Esercizio_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Esercizio_Id })
        </td>
    </tr>
}

</table>
