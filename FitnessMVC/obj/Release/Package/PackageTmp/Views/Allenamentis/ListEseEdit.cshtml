@model IEnumerable<FitnessMVC.Models.Allenamenti>

@{
    ViewBag.Title = "Lista allenamenti";
}

<h2>
    @if (File.Exists(Server.MapPath("~/Content/Immagini/Utenti/" + ViewBag.Uid + ".jpg")))
            {
        <img class="img-login" src="@Url.Content("~/Content/Immagini/Utenti/" + ViewBag.Uid + ".jpg")" />

    }
    else
    {
        <img class="img-login" src="@Url.Content("~/Content/Immagini/Utenti/Anonimous.jpg")" />
    }
    <img class="img-login" src='@Url.Content("~/Content/Immagini/Esercizi/" + ViewBag.Ese + ".jpg")' />
    <span class="badge">@ViewBag.NomeScheda</span>
</h2>
@Html.ActionLink(" ", "Details", "Schedes", new { id = Request.QueryString["idScheda"] }, new { @class = "glyphicon glyphicon-arrow-left text-primary" })

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Numero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GruppoMuscolare)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Serie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ripetizioni)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Peso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Riposo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GruppoMuscolare)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Serie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ripetizioni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Riposo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id, user = Request.QueryString["user"] }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, user = Request.QueryString["user"], idScheda = Request.QueryString["idScheda"] })
            </td>
        </tr>
    }

</table>
